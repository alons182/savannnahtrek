.header
	position relative
	&-top 
		display block
		font-family 'Anton'
		width 100%
		text-transform uppercase
		height 120px
		margin-top .8rem
		margin-bottom 1rem
	&-tagline
		width 100%//30%
		background-color amarillo
		color white
		font-size 18px
		text-align center
		padding-top 0
		p 
			margin-bottom 0
	&-branding
		width 100%//70%
		background-color cafeoscuro
		color white
		overflow hidden
		font-size 25px
	&-logo-text
		//display none
		line-height 100px
		margin-left 2rem
		font-style italic
		
	&-logo
		float right
		margin-top 1rem
		margin-right .5rem
		display block
		//margin 0 auto
		width 110px
	&-banner
		height 344px
		position relative
		background-size cover
		background-position center center
		
		&-info
			color white
			font-family 'Anton'
			text-transform uppercase
			font-style italic
			font-size 2rem
			max-width 380px
			line-height 2.5rem
			position absolute
			text-shadow 1px 1px 2px rgba(0,0,0,0.75)
			top 30%
			left 2rem
		.languages
			position absolute
			right 1rem
			bottom 1rem
			background-color cafeclaro
			padding .5rem
			height 33px
			ul 
				margin 0
				padding 0
				
			li 
				display inline-block
				vertical-align top
				border-right 1px solid amarillo
				&:last-child
					border none
			a 
				display block
				color white
				
				padding 0 .5rem
				line-height 18px
				&:hover
					color amarillo2
	&-menu
		background-color cafeclaro
		color amarillo
		padding .8rem
		text-align center
		position absolute
		top 520px
		width 100%
		z-index 999
		display none
		
		.menu-item
			display block//inline-block
			vertical-align top;
			margin .3rem .3rem
			position relative
			
			
		a 
			display block
			color amarillo2
			box-shadow 1px 1px 2px rgba(0,0,0,.75)
			padding .5rem 1.5rem
			text-transform uppercase
			font-family 'Anton'
			font-style italic
			font-size 1.5rem
			&:hover
				background-color amarillo2
				color cafeoscuro
		.sub-menu
			display none
			position absolute
			background-color cafeoscuro
			z-index 999
			li 
				display block
		
	&-btn-menu
		display block
		background-color cafeoscuro
		color amarillo
		border none
		width 100%
		font-size 2rem

