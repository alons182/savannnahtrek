@import "nib"
@import "normalize.styl"
@import "icons.styl"


cafeoscuro = #281700
cafeclaro = #392100
amarillo = #FFAA00
amarillo2 = #FFC13D
*
	box-sizing border-box

body
	font-family 'Arial', sans-serif
	font-size 16px
	line-height 30px
	background url('./img/bg.jpg');
	

ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
p 
	margin-top 0
	margin-bottom 1.25rem
h1
h2
h3
h4
h5
	font-family: 'Anton', sans-serif;
	margin-top 0
	font-weight 800
	color #333333
h1
	line-height 45px

img
	max-width 100%
	height auto
input[type="text"]
input[type="number"]
input[type="email"]
input[type="url"]
select
textarea
	height 32px
	width 100%
textarea
	height 90px 

.two-columns
	display flex
	justify-content space-between
	flex-wrap wrap
	p
		width: 45%
.two-columns-2
	display flex
	justify-content space-between
	flex-wrap wrap
	> div
		width: 100%

@media screen and (min-width:980px)
