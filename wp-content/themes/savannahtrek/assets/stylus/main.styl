	position relative
	.inner
		overflow hidden
		position relative
		z-index 2
	.bosque
		height 210px
		background url('./img/bosque.png') 0 0
		width 100%
		position absolute
		top -160px
		
	
	.site-info
		float left
		padding .5rem 1rem 
		span 
			display block
			
	&-social
		float right
		a 
			display inline-block
			vertical-align top 
			color white
			padding .5rem
			font-size 1.5rem
		
				
